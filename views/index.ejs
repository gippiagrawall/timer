<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">    <title>Timer : Welcome</title>
<style>
    body{
        background-color: black;
        color : rgb(55, 55, 153)
    }
    button{
        border : none;
        background-color: transparent;
        color :rgb(55, 55, 153);
        font-size: 3vw;
        margin: 40px;
    }
    h1,span { 
        font-family: 'Courier New', Courier, monospace;
        }
        
        h1{
            font-weight: bolder;
            font-size: 7vw;
        }
        #main{
           
           width : 70%
        }
</style>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js" integrity="sha512-fD9DI5bZwQxOi7MhYWnnNPlvXdp/2Pj3XSTRrFs5FQa4mizyGLnJcN6tuvUS6LbmgN1ut+XGSABKvjN0H6Aoow==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>
<body>
    <center>
        <div id="main">
   <h1>Timer <i class="fa-solid fa-stopwatch"></i></h1> 
   <div id="container">
    <div><h1 id="time"><span id="hr">00</span>:<span id="min">00</span>:<span id="sec">00</span>:<span id="ns">00</span></h1></div>
    <div id="btn">
        <button class="btn" onclick="start()" id="start"><i class="fa-solid fa-play"></i></button>
        <button class="btn" onclick="stop()" id="stop"><i class="fa-solid fa-stop"></i></button>
        <button class="btn" onclick="reset()" id="reset"><i class="fa-solid fa-rotate-right"></i></button>
        <form action="/" method="post" >
            <input style='display:none' type="text" name="hr" id="hrinp" readonly>
            <input style='display:none' type="text" name="min" id="mininp" readonly>
            <input style='display:none' type="text" name="sec" id="secinp" readonly>
            <input style='display:none' type="text" name="ns" id="nsinp" readonly>
            <input style='display:none' type="date" name="date" id="datePicker" readonly>
            <button type="submit"><i class="fa-solid fa-upload"></i></button>
        </form>
    </div>

</center>
   </div>
</div>
   <script>
    document.getElementById('datePicker').valueAsDate = new Date();
    let hr = 0;
    let min = 0;
    let sec = 0;
    let ns = 0;
    let timer = false;
    let stop = ()=>{
        timer = false
    }
    let start = ()=>{
        timer = true
        stopWatch()
    }
    let reset = ()=>{
        timer = false
        hr = 0;
        min = 0;
        sec = 0;
        ns = 0;
        document.getElementById('min').innerHTML = "00"
            document.getElementById('hr').innerHTML = "00"

            
            document.getElementById('sec').innerHTML = "00"
            document.getElementById('ns').innerHTML = "00"
    }
    let stopWatch = ()=>{
        if(timer == true){
            ns = ns+1
            if(ns == 100){
                sec = sec+1
                ns = 0
            }
            if(sec == 60){
                min = min+1
                sec = 0
            }
            if(min == 60){
                hr = hr+1
                min = 0
            }

            document.getElementById('hrinp').value = `${hr}`
            document.getElementById('mininp').value = `${min}`
            document.getElementById('secinp').value = `${sec}`
            document.getElementById('nsinp').value = `${ns}`


            document.getElementById('min').innerHTML = min
            document.getElementById('hr').innerHTML = hr
            
            
            document.getElementById('sec').innerHTML = sec
            document.getElementById('ns').innerHTML = ns
            
            setTimeout("stopWatch()",6)
        }
    }
   </script>
</body>
</html>
